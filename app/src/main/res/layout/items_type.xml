<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/or"
    tools:context="com.example.mahdi.unitenniangrocery.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vegetables"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="30dp"
        android:typeface="serif"
        android:id="@+id/VS"
        android:layout_marginTop="85dp"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fruits"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="30dp"
        android:typeface="serif"
        android:id="@+id/FS"
        android:layout_below="@+id/VS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="onClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Baked goods"
        android:textColor="@color/orange"
        android:textSize="30dp"
        android:textStyle="bold"

        android:typeface="serif"
        android:id="@+id/BG"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/FS"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Other stuff"
        android:textColor="@color/orange"
        android:textStyle="bold"

        android:textSize="30dp"
        android:typeface="serif"
        android:id="@+id/OS"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/BG"
        android:layout_alignRight="@+id/VS"
        android:layout_alignEnd="@+id/VS"
        android:clickable="true"
        android:onClick="onClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Evaluate your order"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:typeface="serif"
        android:id="@+id/track"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="135dp"
        android:layout_below="@+id/BG"
        android:clickable="true"
        android:onClick="onClick"/>

</RelativeLayout>

